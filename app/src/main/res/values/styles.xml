<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TweetText">
        <item name="android:textColor">#232323</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TweetTextDetails">
        <item name="android:textColor">#232323</item>
        <item name="android:fontFamily">sans-serif-light</item>asdf
        <item name="android:textSize">13dp</item>
    </style>

    <style name="RelativeTimeText">
        <item name="android:textColor">#8899a6</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="UserNameText">
        <item name="android:textColor">#282f33</item>
        <!-- Roboto-Medium set at runtime  -->
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ScreenNameText">
        <item name="android:textColor">#8899a6</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="ComposeText">
        <item name="android:textColor">#282f33</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TweetButtonText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">13dp</item>
    </style>


</resources>
